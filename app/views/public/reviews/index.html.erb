<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>プロフィール</h2>
      <%= render 'public/users/profile', user: current_user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h1>レビュー一覧</h1>
        <h3>投稿を検索</h3>
          <%= form_tag({controller:"reviews",action:"index"}, method: :get) do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag '検索する' %>
          <% end %>
            <%= render 'index', reviews: @reviews%>
    </div>
  </div>
</div>

