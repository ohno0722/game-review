<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>rate</th>

      <th>Title</th>
      <th>Opinion</th>
      <th>カテゴリー</th>
      <th>コメント数</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% reviews.each do |review| %>
      <tr>

        <td class="review-rating" data-score="<%= review.rate %>"></td>
        <td><%= link_to review.title,review %></td>
        <td><%= review.body %></td>
        <td><%= link_to review.category, search_review_path(keyword: review.category) %></td>
        <td><%= review.comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  $('.review-rating').raty({
    readOnly: true,
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>

