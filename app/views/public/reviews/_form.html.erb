<%= form_with model:review,local:true do |f| %>

  <div class="form-group">
    <%= f.label :title,"title　　" %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit"変更内容を保存", class: 'btn btn-success' %>
  </div>
<% end %>
