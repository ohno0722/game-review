<div class="container">
  <h1>投稿</h1>
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div class>
<%= form_with model: @review,local:true do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル", class: "col-sm-3 col-form-label" %>
    <%= f.text_field :title, class: 'form-control title' %>
  </div>
  <div class="form-group">
    <%= f.label :body, "内容", class: "col-sm-3 col-form-label" %>
    <%= f.text_area :body, class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録", class: "btn btn-outline-success btn-wrapper" %>
  </div>
<% end %>
      </div>
    </div>
  </div>
</div>
