<div class="container">
  <h5><%= @user.name %> の会員詳細</h5>
  <div class="row justify-content-center">
  <div class="col-md-8">

<table class='table table-hover table-inverse'>
<tr>
  <th>会員ID</th>
  <td><%= @user.id %></td>
</tr>
<tr>
  <th>ユーザー名</th>
  <td><%= @user.name %></td>
</tr>
<tr>
  <th>年齢</th>
  <td><%= @user.age %></td>
</tr>
<tr>
  <th>性別</th>
  <td><%= @user.gender %></td>
</tr>
<tr>
  <th>メールアドレス</th>
  <td><%= @user.email %></td>
</tr>
<tr>
  <th>会員ステータス</th>
  <td><% if @user.is_deleted == false %>
        <p>有効</p>
        <% else %>
        <p>退会</p>
        <% end %>
  </td>
</tr>
</table>
  </div>
  </div>

<div class="row justify-content-center">
  <%= link_to '編集する', edit_admin_user_path(@user), class: "btn btn-outline-success" %>

  <%= link_to '会員一覧に戻る', admin_users_path, class: "btn btn-outline-secondary" %>
</div>

</div>