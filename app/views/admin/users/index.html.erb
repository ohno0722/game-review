<div class="container">
<h5>会員一覧</h5>
<div class="row justify-content-center">
<div class="col-md-8">
<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>

        <td><%= user.id %></td>
        <td><%= link_to admin_user_path(user.id), class: "text-blue" do %>
            <%= user.name %>
            <% end %>
        </td>
        <td><%= user.email %></td>
        <td><% if user.is_deleted == false %>
        <p>有効</p>
        <% else %>
        <p>退会</p>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

</div>