<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>編集</h1>
      <%= form_with url: admin_review_path, model: @review,local:true do |f| %>
      <div class="form-group">
        <%= f.label :title,"title　　" %>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :opinion %>
        <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <%= f.submit"変更内容を保存", class: 'btn btn-success' %>
      </div>
      <% end %>
        <%= link_to 'レビュー詳細に戻る', admin_review_path(@review), class: "btn btn-outline-success" %>
        <%= link_to 'レビュー一覧に戻る', admin_reviews_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>